!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
        %title Colibri
        / Bootstrap
        %link{:href => "/assets/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
        / Font Awesome
        %link{:href => "/assets/font-awesome.min.css", :rel => "stylesheet"}
          / Web Font
          %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700,900", :rel => "stylesheet", :type => "text/css"}
            / Custom CSS
            %link{:href => "/assets/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
            %script{:src => "/assets/jquery.min.js"}
            %script{:src => "/assets/responsiveslides.min.js"}
            %script{:src => "http://code.jquery.com/jquery-1.8.2.min.js", :type => "text/javascript"}
            %script{:src => "/assets/jquery.carouFredSel-6.2.0-packed.js", :type => "text/javascript"}
            %script{:src => "/assets/bootstrap.min.js", :type => "text/javascript"}
  %body               
    .pull-right
      .col-sm-12
        %button.btn.btn-primary{"data-toggle" => "modal", :href => "#myModal", :role => "button"} Add New
      %br
        #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-dialog
            .modal-content
              .modal-header
                %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} X
                %h3#myModalLabel Add new Event
                
                = form_for @event do |f|
                  .modal-body
                    .col-sm-12
            
                      .col-sm-3
                        Description
                      .col-sm-6
                        = f.text_area :description, :class => 'form-control'
                 
                    .col-sm-12
                      .col-sm-3
                      .col-sm-3
                        Event Name
                      .col-sm-6
                        = f.text_field :event_name, :class => 'form-control'
                 
                    .col-sm-12
                      .col-sm-3
                      .col-sm-3
                        Event Timings
                      .col-sm-6
                        = f.text_field :time, :class => 'form-control'
                 
                    .col-sm-12
                      .col-sm-3
                      .col-sm-3
                        Event Date
                      .col-sm-6
                        = f.text_field :events_date, :class => 'datepicker form-control'
                 
                    .col-sm-12
                      .col-sm-3
                      .col-sm-3
                        Avatar
                      .col-sm-6
                        = f.file_field :avatar
                 
                    .modal-footer
                      = f.submit 'save', :class => 'btn btn-primary'
.row
  .container
    - @events.each do |e|
      %table{:style => "width:100%;"}
        %thead
          %tr
            %th{:style => "width:30%;"}
            %th{:style => "width:30%;"}
            %th{:style => "width:30%;"}
        %tbody
          %tr
            %td
              = image_tag e.avatar, :size => '300',:class => 'img-thumbnail img-responsive'
            %td
              .event-well-header
                %center
                  = e.event_name
              .event-well
                %center
                  = e.events_date
                  (#{ e.time})

            %td
              = e.description
              
